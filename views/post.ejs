<%- include("partials/header"); -%>
    <div>
        <div class="posts">
            <h2>
                <%= title %>
            </h2>
            <h4>By: <%= author %>
            </h4>
            <hr>

                <p>
                    <%- content %>

                </p>

        </div>
        <hr>
        <div class="post-edit-del">
            
                <form id="deleteForm" action="/post/<%= postId %>?_method=DELETE" method="POST">
                    <button type="submit" class="postdelete">
                        <p>Delete this post</p> <i class="fa-solid fa-trash fa-xl"></i>
                    </button>
                </form>


                <form action="/edit/<%= postId %>" method="GET">
                    <button type="submit" class="postedit">
                        <p>Edit this post</p> <i class="fa-solid fa-pencil fa-xl"></i>
                    </button>
                </form>

        </div>
    </div>

    <%- include('partials/footer') -%>