<%- include("partials/header"); -%>
    <div class="compose">
        <h1>Edit</h1>

        <form class="" id="editForm" action="/post/<%= postId %>?_method=PUT" method="POST">
            <div class="form-group">
                <h5>Title</h5>
                <input type="text" name="postTitle" value="<%= title %>">
                <h5>Author Name</h5>
                <input type="text" name="authorName" value="<%= author %>">
                <h5>Content</h5>
                <textarea id="postBody" name="postBody"><%= content %></textarea>
            </div>

            <div class="edit-save-dicard">
                <button class="btn btn-primary" id="saveBtn" type="submit" name="saveButton">
                    <p>Save Changes</p>
                </button>

                <button class="btn btn-primary" id="discardBtn" type="submit">
                    <p>Discard Changes</p>
                </button>
            </div>
        </form>
    </div>

    <%- include("partials/footer"); -%>