<%- include("partials/header"); -%>

    <div class="compose">
        <h1>Compose</h1>
        <form class="" action="/post" method="post">
            <div class="form-group">
                <div class="g1">

                    <h5>Title</h5>
                    <input type="text" name="postTitle">
                    <h5>Author Name</h5>
                    <input type="text" name="authorName">
                </div>
                <h5>Content</h5>
                <textarea id="postBody" name="postBody" placeholder="Note: You can resize text editor as per your preferences"></textarea>
            </div>
            <button class="btn btn-primary" type="submit" name="button">Publish</button>
        </form>
    </div>

    <%- include("partials/footer"); -%>